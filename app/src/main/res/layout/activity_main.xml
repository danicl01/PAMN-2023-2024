<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        tools:context=".MainActivity"/>

    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/top_curved_cardview"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:text="GRANCA BIKE"
        android:textStyle="bold"
        android:gravity="center|top"
        android:textColor="#FFFFFFFF"
        android:layout_gravity="center_horizontal|top"
        android:textSize="20sp"
        />

    <!-- Nueva vista en la parte inferior -->
    <View
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_curved_view"
        />

    <ImageButton
        android:id="@+id/goToAuthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button_auth"
        android:src="@drawable/ic_user_log"
        android:drawablePadding="8dp"
    />

    <ImageButton
    android:id="@+id/mapOptionsMenu"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:layout_marginLeft="50dp"
    android:layout_marginBottom="5dp"
    android:background="#FFA500"
    android:src="@drawable/map_type"
    android:drawablePadding="8dp"
    />


</FrameLayout>
